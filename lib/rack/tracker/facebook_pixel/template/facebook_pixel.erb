<noscript>
  <img height="1" width="1" style="display:none"
src="https://www.facebook.com/tr?id=<%= options[:pixel_id] %>&amp;ev=PageView&amp;noscript=1"
/>
</noscript>

<% if events.any? %>
<script type="text/javascript">
<% events.each do |event| %>
fbq(<%= event.write %>);
<% end %>
</script>

<noscript>
  <% events.each do |event| %>
  <img height="1" width="1" style="display:none"
src="https://www.facebook.com/tr?id=<%= options[:pixel_id] %>&amp;ev=<%= event.event %>&amp;cd[value]=<%= event.value %>&amp;cd[currency]=<%= event.currency %>"/>
  <% end %>
</noscript>
<% end %>
